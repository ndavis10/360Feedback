@{
    ViewBag.Title = "Student View";
    var counter = 0;
    
}
@using _360Feedback.Models;
@model StudentViewModel

@Styles.Render("~/Content/css")

<link href="~/Content/students.css" rel="stylesheet" type="text/css" />
<link href="~/Content/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" />

<h1>List of Students</h1>
<div id="tabs">
    <ul>
        @foreach (Student s in Model.TeamMembers)
        {
            <li><a href="#@s.Email">@s.Name</a></li>
        }
        </ul>

        @foreach (Student s in Model.TeamMembers)
        {
        <div id="@s.Email" class="questions">
            <h3>Survey for @s.Name</h3>
            @foreach (Question q in Model.Questions)
            {
                <table>
                    <thead>
                        <tr>
                            <th colspan="3" style="text-align:center;" class="title"><h4>@q.title</h4> **Question category description</th>
                        </tr>
                        <tr>
                            <th>Area</th>
                            <th>Choose which option best describes the student you are reviewing</th>
                            <th>Option Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category c in q.categories)
                        {
                            var name = "question" + counter;
                            var desc = "desc" + counter;
                            <tr>
                                <td width="20%"><strong>@c.name</strong></td>
                                <td width="20%">
                                    <form name="radioQuestion" id="radioQuestion" class="radioQuestion">
                                        <label><input type="radio" name='@name' value="@c.Descriptions[0].Value" /> Professional </label><br />
                                        <label><input type="radio" name='@name' value="@c.Descriptions[1].Value" /> Life/Acceptable </label> <br />
                                        <label><input type="radio" name='@name' value="@c.Descriptions[2].Value" /> Introductory/Novice </label> <br />
                                        <label><input type="radio" name='@name' value="@c.Descriptions[3].Value" /> Not Acceptable </label>
                                    </form>
                                </td>
                                <td width="60%">

                                    <p id="@desc" style="font-weight:bold;"></p>
                                </td>
                            </tr>
                            counter++;
                        }

                    </tbody>
                </table>
            }
            
        </div>
        }
</div><br />
<form id="formSave" name="formSave" method="POST" action='SaveResponse' class="text-center">
    <input type="submit" name="submit" id="btnSave" class="btn btn-lg text-center" style="width:20%;height:100px;margin:auto;" value="Save Questions"/>
</form>

@section Scripts{
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/students.js" type="text/javascript"></script>
}