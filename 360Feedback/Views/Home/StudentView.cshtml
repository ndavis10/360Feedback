@{
    Layout = "";
    ViewBag.Title = "Student View";
    String[] students = { "Billy B", "Adam F.", "Taylor G." };
    var counter = 0;
    
}
@using _360Feedback.Models;
@model IEnumerable<Question>

<link href="~/Content/students.css" rel="stylesheet" type="text/css" />
<link href="~/Content/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" />

<h1>List of Students</h1>
<div id="tabs">
    <ul>
        <li><a href="#tabs-1">1</a></li>
        <li><a href="#tabs-2">2</a></li>
        <li><a href="#tabs-3">3</a></li>
        <li><a href="#tabs-4">4</a></li>
        <li><a href="#tabs-5">5</a></li>
    </ul>
    <div id="tabs-1" class="questions">
    @foreach (Question q in Model)
    {        
        <table>
            <thead>
                <tr>
                    <th colspan="3" style="text-align:center;" class="title"><h3>@q.title</h3> **Question category description</th>
                </tr>
                <tr>
                    <th>Area</th>
                    <th>Choose which option best describes the student you are reviewing</th>
                    <th>Option Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category c in q.categories)
                {
                    var name = "question" + counter;
                    var desc = "desc" + counter;
                    <tr>
                        <td width="20%"><strong>@c.name</strong></td>
                        <td width="20%">
                            <form name="radioQuestion" id="radioQuestion" class="radioQuestion">
                                <label><input type="radio" name='@name' value="@c.values[0]" /> Professional </label><br />
                                <label><input type="radio" name='@name' value="@c.values[1]" /> Life/Acceptable </label> <br />
                                <label><input type="radio" name='@name' value="@c.values[2]" /> Introductory/Novice </label> <br />
                                <label><input type="radio" name='@name' value="@c.values[3]" /> Not Acceptable </label>
                            </form>
                        </td>
                        <td width="60%">

                            <p id="@desc" style="font-weight:bold;"></p>
                        </td>
                    </tr>
                    counter++;
                }
                
            </tbody>
        </table>
        <br /><br />
    }
        <form id="formSave" name="formSave" method="POST" action=''>
            <input type="submit" name="submit" id="btnSave" class="btn btn-lg" value="Save Questions" />
        </form>
    </div>
</div>
@section Scripts{
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/students.js" type="text/javascript"></script>
}